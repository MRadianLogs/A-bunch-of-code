package reyesProjects;

/**
 * <Insert C;ass Description Here>
 *
 * @author Michael Jesus Reyes
 *
 */
public class Vector
{
	private double xPos, yPos, angle, length;
	
	public Vector(double xPos, double yPos)
	{
		this.xPos = xPos;
		this.yPos = yPos;
		//Calculate rest of Vector
		calculateAngle();
		calculateLength();
	}
	
	public Vector(double angle, int length) //Constructor for starting a vector with an angle and length.
	{
		this.length = length;
		this.angle = angle;
		setAngle(angle);
		setLength(length);
	}

	public double getxPos()
	{
		return xPos;
	}

	public void setxPos(double xPos)
	{
		this.xPos = xPos;
	}

	public double getyPos()
	{
		return yPos;
	}

	public void setyPos(double yPos)
	{
		this.yPos = yPos;
	}

	public double getAngle()
	{
		return angle;
	}
	
	public void calculateAngle()
	{
		this.angle = Math.atan2(this.yPos, this.xPos);
	}

	public void setAngle(double angle)
	{
		double length = getLength();
		this.xPos = Math.cos(angle) * length;
		this.yPos = Math.sin(angle) * length;
	}

	public double getLength()
	{
		return length;
	}
	
	public void calculateLength()
	{
		this.length = Math.sqrt(Math.pow(this.xPos,2)+Math.pow(this.yPos, 2));
	}

	public void setLength(double length)
	{
		double angle = getAngle();
		this.xPos = Math.cos(angle) * length;
		this.yPos = Math.sin(angle) * length;
	}
}