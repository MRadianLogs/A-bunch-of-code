package reyesProjects;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

import javax.swing.JPanel;
import javax.swing.Timer;

/**
 * <Insert C;ass Description Here>
 *
 * @author Michael Jesus Reyes
 *
 */
public class BAHEScreen extends JPanel implements ActionListener, KeyListener
{
	private BAHE game;
	private Board board;
	private Puck puck1;
	private Puck puck2;
	
	public BAHEScreen(BAHE game)
	{
		this.game = game;
		setBackground(Color.BLACK);
		
		board = new Board(game);
		puck1 = new Puck(game, KeyEvent.VK_W, KeyEvent.VK_S, KeyEvent.VK_A, KeyEvent.VK_D, 100, 100);
		puck2 = new Puck(game, 0, 0, 0, 0, 150, 100); //Hmmm
		
		Timer timer = new Timer(5,this);
		timer.start();
		
		addKeyListener(this);
		setFocusable(true);
	}
	
	public void update()
	{
		//update all moving objects
		puck1.update();
		puck2.update();
	}
	
	public void actionPerformed(ActionEvent e)
	{
		update();
		repaint();
	}
	
	@Override
	public void keyPressed(KeyEvent e)
	{
		puck1.keyPressed(e.getKeyCode());
	}

	@Override
	public void keyReleased(KeyEvent e)
	{
		puck1.keyReleased(e.getKeyCode());
	}

	@Override
	public void keyTyped(KeyEvent e)
	{
		;		
	}
	
	public void paintComponent(Graphics g)
	{
		super.paintComponent(g);
		board.paint(g);
		puck1.paint(g);
		puck2.paint(g);
	}
}
